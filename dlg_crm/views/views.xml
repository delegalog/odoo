<odoo>
    <data>
        <record id="view_dlg_crm_opportunity_form" model="ir.ui.view">
            <field name="name">view.dlg.crm.opportunity.form</field>
            <field name="model">dlg_crm.opportunity</field>
            <field name="arch" type="xml">
                <form string="Oportunidad">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_state" type="object" class="oe_stat_button"
                                    string="Oportunidad realizada" icon="fa-play-circle"
                            />
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="customer"/>
                                <field name="date"/>
                                <field name="type"/>
                                <field name="status"/>
                            </group>
                            <group name="group_right">
                                <field name="name"/>
                                <field name="notes"/>
                                <field name="done"/>
                                <field name="image" widget="image"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dlg_crm_opportunity_kanban" model="ir.ui.view">
            <field name="name">view.dlg.crm.opportunity.kanban</field>
            <field name="model">dlg_crm.opportunity</field>
            <field name="arch" type="xml">
                <kanban class="o_dlg_crm_opportunity_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="notes"/>
                    <field name="customer"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="status"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('dlg_crm.opportunity', 'image', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <field name="customer"/>
                                    </strong>
                                    <div t-if="record.date.value">
                                        <t t-esc="record.date.value"/>
                                    </div>
                                    <div t-if="record.type.value">
                                        <t t-esc="record.type.value"/>
                                    </div>
                                    <div t-if="record.status.value">
                                        <t t-esc="record.status.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_dlg_crm_opportunity_tree" model="ir.ui.view">
            <field name="name">view.dlg.crm.opportunity.tree</field>
            <field name="model">dlg_crm.opportunity</field>
            <field name="arch" type="xml">
                <tree string="Oportunidad">
                    <field name="customer"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="status"/>
                    <field name="date"/>
                    <button name="f_create" string="Crear" class="oe_highlight" type="object"/>
                    <button name="f_search_update" string="Buscar/Editar" class="oe_highlight" type="object"/>
                    <button name="f_delete" string="Eliminar" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_dlg_crm_opportunity_search" model="ir.ui.view">
            <field name="name">view.dlg.crm.opportunity.search</field>
            <field name="model">dlg_crm.opportunity</field>
            <field name="arch" type="xml">
                <search string="Filtrar oportunidades">
                    <field name="name"/>
                    <field name="notes"/>
                    <field name="customer"/>
                    <field name="type"/>
                    <field name="status"/>
                    <field name="date"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_type" string="Status" domain="[]" context="{'group_by':'status'}"
                                help="Agrupar por situación"/>
                        <filter name="groupby_type" string="Tipo" domain="[]" context="{'group_by':'type'}"
                                help="Agrupar por tipo"/>
                        <filter name="groupby_date" string="Fecha" context="{'group_by':'date:year'}"
                                help="Agrupar por fecha"/>
                    </group>
                    <filter name="filter_by_done" string="Realizada" domain="[('done','=','True')]"
                            help="Oportunidades tratadas"/>
                </search>
            </field>
        </record>

        <record id="action_dlg_crm_opportunity_view" model="ir.actions.act_window">
            <field name="name">Opportunity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dlg_crm.opportunity</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Oportunidad
                </p>
                <p>
                    Click 'Nueva' para añadir nuevas oportunidades
                </p>
            </field>
        </record>

        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">view.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="zone" />
                </xpath>
            </field>
        </record>

        <record id="view_dlg_crm_phase_form" model="ir.ui.view">
            <field name="name">view.dlg.crm.phase.form</field>
            <field name="model">dlg_crm.phase</field>
            <field name="arch" type="xml">
                <form string="Fase">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_state" type="object" class="oe_stat_button"
                                    string="Fase creada" icon="fa-play-circle"
                            />
                        </div>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="id"/>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_dlg_crm_phase_kanban" model="ir.ui.view">
            <field name="name">view.dlg.crm.phase.kanban</field>
            <field name="model">dlg_crm.phase</field>
            <field name="arch" type="xml">
                <kanban class="o_dlg_crm_phase_kanban">
                    <field name="id"/>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img alt="Avatar"
                                         t-att-src="kanban_image('dlg_crm.phase', 'image', record.id.raw_value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                        <field name="id"/>
                                    </strong>
                                    <div t-if="record.name.value">
                                        <t t-esc="record.name.value"/>
                                    </div>
                                    <div t-if="record.id.value">
                                        <t t-esc="record.id.value"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_dlg_crm_phase_tree" model="ir.ui.view">
            <field name="name">view.dlg.crm.phase.tree</field>
            <field name="model">dlg_crm.phase</field>
            <field name="arch" type="xml">
                <tree string="Fase">
                    <field name="name"/>
                    <field name="id"/>
                    <button name="f_create" string="Crear" class="oe_highlight" type="object"/>
                    <button name="f_search_update" string="Buscar/Editar" class="oe_highlight" type="object"/>
                    <button name="f_delete" string="Eliminar" class="oe_highlight" type="object"/>
                </tree>
            </field>
        </record>

        <record id="view_dlg_crm_phase_search" model="ir.ui.view">
            <field name="name">view.dlg.crm.phase.search</field>
            <field name="model">dlg_crm.phase</field>
            <field name="arch" type="xml">
                <search string="Filtrar Fases">
                    <field name="name"/>
                    <field name="id"/>
                    <group expand="0" string="Group By">
                        <filter name="groupby_type" string="id" domain="[]" context="{'group_by':'id'}"
                                help="Agrupar por id"/>
                        <filter name="groupby_type" string="Nombre" domain="[]" context="{'group_by':'name'}"
                                help="Agrupar por nombre"/>
                    </group>
                    <filter name="filter_by_done" string="Realizada" domain="[('done','=','True')]"
                            help="Fases listas"/>
                </search>
            </field>
        </record>

        <record id="action_dlg_crm_phase_view" model="ir.actions.act_window">
            <field name="name">Phase</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">dlg_crm.phase</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Fase
                </p>
                <p>
                    Click 'Nueva' para añadir nuevas fases
                </p>
            </field>
        </record>

        <menuitem id="menu_dlg_crm_root" name="dlg219 CRM" sequence="10"/>
        <menuitem id="menu_dlg_crm_categ" name="Operaciones" parent="menu_dlg_crm_root" sequence="0"/>
        <menuitem id="menu_dlg_crm_phase" name="Fases" parent="menu_dlg_crm_categ" sequence="0"
                  action="action_dlg_crm_phase_view"/>
        <menuitem id="menu_dlg_crm_opportunity" name="Oportunidades" parent="menu_dlg_crm_categ" sequence="1"
                  action="action_dlg_crm_opportunity_view"/>

    </data>
</odoo>